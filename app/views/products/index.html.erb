<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <p><%= product.name %></p>
    <p><%= product.amount %></p>
    <p><%= product.status %></p>
    <p>
      <%= link_to "Show this product", [@notepad, @cart, @product] %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_notepad_cart_product_path %>
