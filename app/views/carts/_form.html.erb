<%= form_with(model: [notepad, cart, product]) do |form| %>
  <% if cart.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cart.errors.count, "error") %> prohibited this cart from being saved:</h2>

      <ul>
        <% cart.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <form>
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name , class: 'form-control'%>
      <%= form.label :status, class: 'form-label' %>
      <%= form.check_box :status%>
      <%= form.fields_for :products do |builder| %>
          <%= render 'product_fields', form: builder %>
          <% end %>
          <%= link_to_add_association 'add product', form, :products, class: 'btn btn-primary' %>
      <div><p></p></div>
      <%= form.submit "Save Cart"%>
    </form>
  </div>
<% end %>
