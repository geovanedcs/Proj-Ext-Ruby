<p style="color: green"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Notepad</th>
      <th scope="col">Purchase Date</th>
      <th scope="col"></th>
    </tr>
  </thead>
    <tbody>
        <tr>
          <td><%= @notepad.name %></td>
          <td><%= @notepad.purchase_date %></td>
          <td>
          <div class="container text-center">
              <div class="row align-items-start" >
                <div class="col">
                <%= button_to "Edit this notepad", edit_notepad_path(@notepad), method: :get, class: 'btn btn-warning', style: 'width: 200px;'  %>
                </div>
                <div class="col">
                <%= button_to "Back to notepads", notepads_path, method: :get, class: 'btn btn-primary', style: 'width: 200px;' %>
                </div>
                <div class="col">
                <%= button_to 'Carts', notepad_carts_path(@notepad, @notepad.carts), method: :get, class: 'btn btn-success', style: 'width: 200px;' %>
                </div>
                <div class="col">
                <%= button_to "Destroy this notepad", [@notepad], method: :delete, class: 'btn btn-danger', style: 'width: 200px;' %>
                </div>
              </div>
           </div>
          </td>
        </tr>
    </tbody>
</table>


